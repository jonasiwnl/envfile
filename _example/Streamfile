on pre-commit:
    run "npm test"
    run "npm run lint"

# Post-commit hook script
on post-commit:
    commit_hash = git rev-parse HEAD
    commit_message = git log --format=%B -n 1 $commit_hash
    author = git log --format=%an -n 1 $commit_hash

    run "echo Commit: $commit_hash"
    run "echo Message: $commit_message"
    run "echo Author: $author"

# Pre-push hook script
on pre-push:
    branch = git symbolic-ref --short HEAD
    remote = $(git rev-parse --symbolic-full-name --abbrev-ref $(git symbolic-ref -q HEAD))

    run "echo Pushing branch: $branch to $remote"
    run "npm run build"
